{
    "manifest_version": 3,
    "name": "youtube_comment_timeline",
    "version": "0.1.0",
    "description": "An extension that displays time-specified comments on YouTube.",
    "icons": {
        "128": "assets/icon128.png"
    },
    "background": {
        "service_worker": "background/service-worker.js",
        "type": "module"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content/inject.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}